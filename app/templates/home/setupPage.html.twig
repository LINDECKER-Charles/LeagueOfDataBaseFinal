<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setup</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

    <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
</head>
<body class="bg-blue-950 text-white font-spiegel transition-all duration-300 ease-in-out w-screen" id="content">
  {% include 'partials/headerSetup.html.twig' %}
  <div class="min-h-screen flex flex-col">

    {% set selectedLocale = session.locale ?? currentLocale ?? 'en_US' %}
    {% set selectedVersion = session.version ?? (versions|first) %}

    {% if 0 %}
      <p>selectedLocale : <strong>{{ selectedLocale }}</strong></p>
      <p>currentLocale  : <strong>{{ currentLocale }}</strong></p>
      <p>session.locale : <strong>{{ session.locale ?? '—' }}</strong></p>
      <p>session.version: <strong>{{ session.version ?? '—' }}</strong></p>
    {% endif %}

    <main class="flex-1 flex flex-col justify-center items-center bg-blue-950 px-4">
      <form action="{{ path('app_setup_save') }}" method="post" class="w-full max-w-xl flex flex-col items-center gap-12 bg-blue-850 text-white p-8 border border-grey-700 rounded-lg">
        <input type="hidden" name="_token" value="{{ csrf_token('setup_form') }}">
        <!-- Version -->
        <div class="w-full flex flex-col items-center gap-4 ">
          <label for="version" class="font-beaufort text-4xl">Version</label>
          <select
            id="version"
            name="version"
            class="w-4/5 text-2xl px-6 py-5 bg-blue-950 text-white border border-grey-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-200 hover:cursor-pointer"
          >
            {% for version in versions %}
              <option value="{{ version }}" {{ version == selectedVersion ? 'selected' : '' }}>
                {{ version }}
              </option>
            {% endfor %}
          </select>
        </div>

        <!-- Langue -->
        <div class="w-full flex flex-col items-center gap-4">
          <label for="langue" class="font-beaufort text-4xl">Langue</label>
          <select
            id="langue"
            name="langue"
            class="hover:cursor-pointer w-4/5 text-2xl px-6 py-5 bg-blue-950 text-white border border-grey-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-200"
          >
            {% for lang in languages %}
              <option value="{{ lang }}" {{ lang == selectedLocale ? 'selected' : '' }}>
                {{ languageLabels[lang] ?? lang }}
              </option>
            {% endfor %}
          </select>
          <p class="italic text-sm opacity-60 text-white mt-2">
            *La dernière version est automatiquement proposée
          </p>
        </div>

        <!-- Rappel -->
        <div class="w-4/5 flex items-center gap-4">
          <input
            type="checkbox"
            id="remember"
            name="remember"
            class="w-5 h-5 appearance-none border-2 border-grey-700 rounded-sm bg-blue-950 checked:bg-blue-200 checked:border-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-200"
          />

          <label for="remember" class="font-semibold italic text-sm select-none">
            Se souvenir de mon choix
          </label>
        </div>

        <!-- Bouton -->
        <button
          type="submit"
          class="duration-300 w-4/5 text-2xl font-bold py-5 rounded-lg bg-blue-200 text-blue-950 hover:bg-blue-100 transition-colors hover:cursor-pointer"
        >
          Valider
        </button>
      </form>
    </main>
  </div>
  {% include 'partials/toaster.html.twig' %}
  {% include 'partials/footer.html.twig' %}
</body>
<script type="module" data-reload>
  import initAddonScript from '{{ asset("js/centerPage.js") }}';
  initAddonScript();
</script>
</html>