{# templates/system/under_construction.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'system.under_construction.title'|trans }}{% endblock %}
{% block meta_description %}{{ 'system.under_construction.meta_description'|trans }}{% endblock %}
{% block img %}/preview/working.png{% endblock %}
{% block meta_robots %}noindex, nofollow{% endblock %}

{% block body %}
<main class="relative min-h-[65vh] bg-blue-950 overflow-hidden flex items-center justify-center py-7">

  {# Halo de fond + étoiles légères #}
  <div aria-hidden="true" class="pointer-events-none absolute inset-0">
    <div class="absolute -top-1/4 left-1/2 -translate-x-1/2 h-[60rem] w-[60rem] rounded-full opacity-30 blur-3xl"
         style="background: radial-gradient(closest-side, rgba(147,197,253,0.2), rgba(30,58,138,0.2) 45%, transparent 70%);">
    </div>
    <div class="absolute inset-0">
      {% for i in 1..24 %}
        <span class="absolute block h-1 w-1 rounded-full bg-blue-200/30"
              style="top: {{ random(2,98) }}%; left: {{ random(2,98) }}%;"></span>
      {% endfor %}
    </div>
  </div>

  <section class="relative mx-auto max-w-5xl px-6 py-20">

    {# En-tête #}
    <header class="flex items-center gap-5 mb-10">
      <div class="relative grid place-items-center h-16 w-16 rounded-2xl bg-blue-900 border border-grey-700 shadow-lg">
        <div class="absolute inset-0 rounded-2xl blur-xl opacity-50"
             style="background: radial-gradient(closest-side, rgba(191,219,254,0.25), transparent);"></div>
        {# Logo LoL #}
        <svg id="FINAL" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 800" class="relative z-10 h-10 w-10">
          <defs><style>.cls-1{fill:#fff;}</style></defs>
          <g>
            <path class="cls-1" d="M438.14,168A235.31,235.31,0,0,1,580.08,552.7h79.45a299,299,0,0,0,41.4-152.25c0-153.18-114.63-279.58-262.79-298.11Z"/>
            <path class="cls-1" d="M208.88,631.86V537.33a235.17,235.17,0,0,1,0-273.77V169a300.44,300.44,0,0,0,0,462.83Z"/>
          </g>
          <polygon class="cls-1" points="393.14 75 220.98 75 253.88 142.3 253.88 658.33 221.32 724.89 611.49 724.89 647.14 597.7 393.14 597.7 393.14 75"/>
        </svg>
      </div>

      <div>
        <h1 class="font-beaufort text-4xl sm:text-5xl tracking-wide text-transparent bg-clip-text bg-gradient-to-r from-blue-100 via-blue-300 to-blue-100">
          {{ 'system.under_construction.heading'|trans }}
        </h1>
        <p class="font-spiegel text-blue-200/85 mt-1">
          {{ 'system.under_construction.subheading'|trans }}
        </p>
      </div>
    </header>

    {# Carte glossy #}
    <div class="rounded-2xl border border-grey-700 bg-blue-850/80 backdrop-blur-xl shadow-xl p-8">

      <div class="grid gap-8 lg:grid-cols-3">
        <div class="lg:col-span-2 space-y-6">
          <div class="rounded-xl border border-grey-700 bg-blue-950/80 p-4">
            <p class="font-spiegel text-blue-100/85">
              {{ 'system.under_construction.info'|trans }}
            </p>
          </div>

          {# Barre de progression stylée #}
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm text-blue-200/80 font-spiegel">{{ 'system.under_construction.progress_label'|trans }}</span>
              <span class="text-sm text-blue-200/80 font-spiegel" id="uc-percent">~10%</span>
            </div>
            <div class="relative h-3 rounded-full border border-grey-700 bg-blue-950 overflow-hidden">
              <div class="absolute inset-y-0 left-0 w-[60%] bg-gradient-to-r from-blue-200 to-blue-300"></div>
              <div class="absolute inset-0 opacity-30"
                   style="background-image: linear-gradient(45deg, rgba(255,255,255,.25) 25%, transparent 25%, transparent 50%, rgba(255,255,255,.25) 50%, rgba(255,255,255,.25) 75%, transparent 75%, transparent);
                          background-size: 24px 24px; animation: uc-move 2s linear infinite;"></div>
            </div>
          </div>
        </div>

        {# Carte de liens rapides #}
        <aside class="rounded-xl border border-grey-700 bg-blue-950/60 p-5 space-y-3">
          <p class="text-sm text-blue-200/80 font-spiegel">{{ 'system.under_construction.meanwhile'|trans }}</p>
          <div class="flex flex-col gap-3">
            <a href="javascript:history.back()"
               class="px-4 py-2 rounded-lg border border-grey-700 bg-transparent text-white hover:bg-blue-900 transition-colors text-center">
              {{ 'system.under_construction.back'|trans }}
            </a>
            <a href="{{ path('app_summoners') }}"
               class="px-4 py-2 rounded-lg border border-grey-700 bg-blue-950 text-white hover:bg-blue-900 transition-colors text-center">
              {{ 'system.under_construction.summoners'|trans }}
            </a>
            <a href="{{ path('app_setup') }}"
               class="px-4 py-2 rounded-lg border border-grey-700 bg-blue-200 text-blue-950 font-semibold hover:bg-blue-100 transition-colors text-center">
              {{ 'system.under_construction.setup'|trans }}
            </a>
          </div>
        </aside>
      </div>
    </div>

    {# Bandeau bas #}
    <footer class="mt-10 text-center">
      <p class="text-xs text-blue-200/60 font-spiegel">
        {{ 'system.under_construction.footer'|trans }}
      </p>
    </footer>
  </section>
</main>

{# Animation stripes #}
<style>
@keyframes uc-move {
  from { background-position: 0 0; }
  to   { background-position: 24px 0; }
}
</style>
{% endblock %}
